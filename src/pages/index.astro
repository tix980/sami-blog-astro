		<div class='flex flex-col'>
			<h2 class='text-2xl font-semibold text-text py-4'>Recent blog posts:</h2>
				<div>
					<div class="flex flex-wrap">
						{posts.map((post) => (
							<div class="flex-col w-full md:w-1/2 lg:w-1/3 xl:w-1/3 p-4">
								<div class="card card-con rounded-2xl shadow-md card-shadow  hover:shadow-xl hover:card-shadow ">
									<Image class="card-img-top1" src={post.data.image} alt="Card image" style="width:100%; height:200px;" />
									<div class="card-body bg-background">
										<Link class='flex justify-between text-text' href={`/blog/${post.slug}`}>
											<h4 class="card-title">{post.data.title}</h4>
										</Link>
										<p class="card-text">{post.data.description}</p>
									</div>
								</div>
							</div>
						))}
